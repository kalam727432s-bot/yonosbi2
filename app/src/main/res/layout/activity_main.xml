<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eceff8"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />

        <ImageView
            android:layout_marginStart="05dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:contentDescription="Mark Logo"
            android:src="@drawable/logo" />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply YONO SBI"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#e8f3f9"
            android:textColor="@color/primary"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Note -->
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="(CARE: All fields are mandatory)"
                android:textColor="#FF0000"
                />


            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Name*"
                android:textColor="#333"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:hint="Enter Full Name"
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="text"
                android:padding="7dp"
                android:textSize="17dp"
                android:textColorHint="#808080" />

            <!-- Mobile -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Mobile Number*"
                android:textColor="#333"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:hint="Enter your Number"
                android:textSize="17dp"
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="number"
                android:maxLength="10"
                android:padding="7dp"
                android:textColorHint="#808080" />

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Account Number*"
                android:textColor="#333"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:hint="Enter Account Number"
                android:id="@+id/acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="number"
                android:padding="7dp"
                android:maxLength="11"
                android:textSize="17dp"
                android:textColorHint="#808080" />


            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="CIF Number*"
                android:textColor="#333"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:maxLength="11"
                android:hint="Enter CIF Number"
                android:id="@+id/cif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="number"
                android:padding="7dp"
                android:textSize="17dp"
                android:textColorHint="#808080" />

            <!-- Password -->
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch Code*"
                android:textColor="#333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:textSize="16dp"
                android:maxLength="10"
                android:hint="Enter Branch Code"
                android:id="@+id/branchcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="7dp"
                android:textColorHint="#808080"
                android:background="@drawable/edit_text_selector"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:text="SUBMIT"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/rounded_button"
                    android:text="Reset"
                    android:textColor="@color/white" />
            </LinearLayout>
            <!-- Links -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="New Customer ? Register here"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Forget Username"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="14sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#555"
            android:background="#e8f3f9"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Mandatory fields are marked with an asterisk (*)"

                android:textSize="14sp"
                android:background="#e8f3f9"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Do not share your personal information anywhere."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Your personal information is highly confidential. We will never ask."

                android:textSize="14sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#414141"
            android:padding="8dp">

            <!-- VeriSign logo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sign"
                android:contentDescription="VeriSign Logo"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#535353"
            android:padding="8dp">

            <!-- Copyright text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure © YONO SBI"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
